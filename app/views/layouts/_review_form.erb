<%= render "layouts/errors", :object => @review %>
<hr>
<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author, class: "form-control" %>
  <%= f.label :rating %>
  <%= f.number_field :rating, class: "form-control" %>
  <%= f.label :content_body %>
  <%= f.text_area :content_body, class: "form-control" %><br>
  <%= f.submit "Enter", :class => "btn btn-success" %>
<% end %>